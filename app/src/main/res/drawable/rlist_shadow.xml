<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/item_shadow"/>
            <corners android:radius="@dimen/shadow_radius" />
        </shape>
    </item>

    <item
        android:left="@dimen/item_shadow"
        android:right="@dimen/item_shadow"
        android:top="@dimen/item_shadow_top"
        android:bottom="@dimen/item_shadow">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/item_radius" />
        </shape>
    </item>

</layer-list>